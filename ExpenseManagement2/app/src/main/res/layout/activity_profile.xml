<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/drawerLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2196F3"
                android:id="@+id/toolbar" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:text="Ho so"/>
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="60dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D1C5C5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher"
                            android:layout_marginBottom="20dp"/>
                        <EditText
                            android:id="@+id/edtEmail"
                            android:drawableLeft="@drawable/ic_action_mail"
                            android:drawablePadding="10dp"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/edit_text_border"
                            android:hint="Email" />

                        <EditText
                            android:id="@+id/edtPassword"
                            android:drawableLeft="@drawable/ic_action_password"
                            android:drawablePadding="10dp"
                            android:paddingLeft="5dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:background="@drawable/edit_text_border"
                            android:hint="Password" />

                        <EditText
                            android:id="@+id/edtUsername"
                            android:drawableLeft="@drawable/ic_action_account"
                            android:drawablePadding="10dp"
                            android:paddingLeft="5dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:background="@drawable/edit_text_border"
                            android:hint="Username" />
                        <EditText
                            android:id="@+id/edtMoney"
                            android:drawableLeft="@drawable/ic_action_money"
                            android:drawablePadding="10dp"
                            android:paddingLeft="5dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:background="@drawable/edit_text_border"
                            android:hint="Money" />
                        <Button
                            android:id="@+id/btnLogout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/button_border"
                            android:text="Dang Xuat" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:id="@+id/navigationView">
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/navListView" />
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>