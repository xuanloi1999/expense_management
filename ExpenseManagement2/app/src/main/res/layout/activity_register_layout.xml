<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#2196F3"
        android:gravity="center"
        android:text="Dang Ky"
        android:textColor="#fff"

        android:textSize="50sp" />

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="60dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D1C5C5"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_launcher" />
                <TextView
                    android:id="@+id/txtError"
                    android:visibility="invisible"
                    android:textColor="#F44336"
                    android:padding="10dp"
                    android:text="All field must be fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edtEmail"
                    android:drawableLeft="@drawable/ic_action_mail"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="Email" />

                <EditText
                    android:id="@+id/edtPassword"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_action_password"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_border"
                    android:hint="Password" />

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_action_password"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_border"
                    android:hint="Confirm Password" />
                <EditText
                    android:id="@+id/edtUsername"
                    android:drawableLeft="@drawable/ic_action_account"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_border"
                    android:hint="Username" />
                <EditText
                    android:id="@+id/edtMoney"
                    android:drawableLeft="@drawable/ic_action_money"
                    android:drawablePadding="10dp"
                    android:paddingLeft="5dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_border"
                    android:hint="Money" />
                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_border"
                    android:text="Dang Ky" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>